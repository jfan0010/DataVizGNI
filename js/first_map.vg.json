{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "year_selection",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1965,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 1000,
      "height": 800,
      "projection": { "type": "equirectangular" },
      "data": {
        "url": "https://raw.githubusercontent.com/jfan0010/DataVizGNI/main/js/ne_110m_admin_0_countries.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "layer": [
        {
          "transform": [
            {
              "calculate": "'Data is not available for ' + datum.properties.NAME + ' in year ' + year_selection + '.'",
              "as": "note"
            }
          ],
          "mark": { "type": "geoshape", "fill": "#ececec", "stroke": "white" },
          "encoding": { "tooltip": { "field": "note" } }
        },
        {
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/jfan0010/DataVizGNI/main/data/gniUsd.csv"
                },
                "key": "gniCountry",
                "fields": [
                  "1960",
                  "1961",
                  "1962",
                  "1963",
                  "1964",
                  "1965",
                  "1966",
                  "1967",
                  "1968",
                  "1969",
                  "1970",
                  "1971",
                  "1972",
                  "1973",
                  "1974",
                  "1975",
                  "1976",
                  "1977",
                  "1978",
                  "1979",
                  "1980",
                  "1981",
                  "1982",
                  "1983",
                  "1984",
                  "1985",
                  "1986",
                  "1987",
                  "1988",
                  "1989",
                  "1990",
                  "1991",
                  "1992",
                  "1993",
                  "1994",
                  "1995",
                  "1996",
                  "1997",
                  "1998",
                  "1999",
                  "2000",
                  "2001",
                  "2002",
                  "2003",
                  "2004",
                  "2005",
                  "2006",
                  "2007",
                  "2008",
                  "2009",
                  "2010",
                  "2011",
                  "2012",
                  "2013",
                  "2014",
                  "2015",
                  "2016",
                  "2017",
                  "2018",
                  "2019",
                  "2020"
                ]
              }
            },
            {
              "fold": [
                "1960",
                "1961",
                "1962",
                "1963",
                "1964",
                "1965",
                "1966",
                "1967",
                "1968",
                "1969",
                "1970",
                "1971",
                "1972",
                "1973",
                "1974",
                "1975",
                "1976",
                "1977",
                "1978",
                "1979",
                "1980",
                "1981",
                "1982",
                "1983",
                "1984",
                "1985",
                "1986",
                "1987",
                "1988",
                "1989",
                "1990",
                "1991",
                "1992",
                "1993",
                "1994",
                "1995",
                "1996",
                "1997",
                "1998",
                "1999",
                "2000",
                "2001",
                "2002",
                "2003",
                "2004",
                "2005",
                "2006",
                "2007",
                "2008",
                "2009",
                "2010",
                "2011",
                "2012",
                "2013",
                "2014",
                "2015",
                "2016",
                "2017",
                "2018",
                "2019",
                "2020"
              ],
              "as": ["year", "rawGni"]
            },
            { "calculate": "toNumber(datum.rawGni)", "as": "gni" },
            { "filter": "datum.year == year_selection" },
            {
              "calculate": "'In ' + year_selection + ', you can earn ' + datum.gni + ' US$ a year on average in '+ datum.properties.NAME + '.'",
              "as": "noteWithData"
            }
          ],
          "mark": { "type": "geoshape", "stroke": "white" },
          "encoding": {
            "color": {
              "field": "gni",
              "type": "quantitative",
              "scale": { "type": "log" },
              "title": "GNI per Capita",
              "legend": {
                "direction": "vertical",
                "orient": "top-right",
                "zindex": 1,
                "offset": 25
              }
            },
            "tooltip": { "field": "noteWithData" }
          }
        }
      ]
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jfan0010/DataVizGNI/main/data/combinedClean.csv"
      },
      "width": 1000,
      "height": 1000,
      "transform": [
        { "calculate": "toNumber(datum.gni)", "as": "numGni" },
        { "calculate": "toNumber(datum.year)", "as": "yearNum" }
      ],
      "layer": [
        {
          "transform": [
            { "filter": { "field": "countryName", "equal": "Australia" } },
            { "filter": "datum.yearNum == year_selection" }
          ],
          "mark": {
            "type": "text",
            "fontSize": 100,
            "x": 520,
            "y": 500,
            "opacity": 0.06
          },
          "encoding": { "text": { "field": "yearNum" } }
        },
        {
          "encoding": {
            "x": {
              "field": "population",
              "type": "quantitative",
              "scale": { "type": "log", "zero": false },
              "axis": { "title": "Population" }
            },
            "y": {
              "field": "numGni",
              "type": "quantitative",
              "scale": { "type": "log", "zero": false },
              "axis": { "title": "GNI per Capita (US$)" }
            }
          },
          "layer": [
            {
              "mark": {
                "type": "line",
                "size": 4,
                "color": "lightgray",
                "strokeCap": "round"
              },
              "encoding": {
                "detail": { "field": "countryName" },
                "order": { "field": "yearNum" },
                "opacity": {
                  "condition": {
                    "test": {
                      "or": [
                        { "param": "hovered", "empty": false },
                        { "param": "clicked", "empty": false }
                      ]
                    },
                    "value": 0.8
                  },
                  "value": 0
                }
              }
            },
            {
              "params": [
                {
                  "name": "hovered",
                  "select": {
                    "type": "point",
                    "fields": ["countryName"],
                    "toggle": false,
                    "on": "mouseover"
                  }
                },
                {
                  "name": "clicked",
                  "select": { "type": "point", "fields": ["countryName"] }
                }
              ],
              "transform": [{ "filter": "year_selection == datum.yearNum" }],
              "mark": { "type": "circle", "size": 100, "opacity": 0.9 },
              "encoding": {
                "color": {
                  "field": "region",
                  "title": "Region",
                  "legend": {
                    "direction": "vertical",
                    "orient": "top-right",
                    "zindex": 1,
                    "offset": 25
                  }
                }
              }
            },
            {
              "transform": [
                {
                  "filter": {
                    "and": [
                      "year_selection == datum.yearNum",
                      {
                        "or": [
                          { "param": "clicked", "empty": false },
                          { "param": "hovered", "empty": false }
                        ]
                      }
                    ]
                  }
                }
              ],
              "mark": {
                "type": "text",
                "yOffset": -12,
                "fontSize": 12,
                "fontWeight": "bold"
              },
              "encoding": {
                "text": { "field": "countryName" },
                "color": { "field": "region", "title": "Region" }
              }
            },
            {
              "transform": [
                { "filter": { "param": "hovered", "empty": false } },
                { "filter": { "not": "year_selection == datum.yearNum" } }
              ],
              "layer": [
                {
                  "mark": {
                    "type": "text",
                    "yOffset": -12,
                    "fontSize": 10,
                    "color": "gray",
                    "opacity": 0.5
                  },
                  "encoding": { "text": { "field": "yearNum" } }
                },
                {
                  "mark": { "type": "circle", "color": "gray", "opacity": 0.3 }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
