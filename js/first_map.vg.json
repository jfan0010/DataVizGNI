                "2019",
                "2020"
              ],
              "as": ["year", "rawGni"]
            },
            {"calculate": "toNumber(datum.rawGni)", "as": "gni"},
            {"filter": "datum.year == year_selection"}
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "field": "gni",
              "type": "quantitative",
              "scale": {"type": "log"},
              "title": "GNI per Capita"
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "gni",
                "type": "quantitative",
                "title": "GNI per Capita"
              }
            ]
          }
        }
      ]
    }
  ]
