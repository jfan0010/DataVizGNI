{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/jfan0010/FIT3179Week10Homwork/main/data/normalisedGniHighlightedCountries.csv"
  },
  "vconcat": [
    {
      "title": "GNI of Highlighted Countries",
      "height": 600,
      "width": 800,

      "transform": [{ "filter": { "param": "brush" } }],

      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "TIME",
          "title": "",
          "scale": { "domain": { "param": "brush" } }
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "GNI (US$) per Capita"
        },
        "color": { "field": "LOCATION", "type": "nominal", "title": "Country" },
        "tooltip": [
          { "field": "LOCATION", "type": "nominal", "title": "Country Code" },
          {
            "field": "Value",
            "type": "quantitative",
            "title": "GNI per Capita"
          },
          { "field": "TIME", "timeUnit": "year", "title": "Year" }
        ]
      },
      "layer": [
        { "mark": { "type": "line", "point": true } },
        {
          "transform": [
            {
              "sort": [{ "field": "Value", "order": "descending" }],
              "window": [{ "op": "rank", "as": "ranking" }]
            },
            { "filter": "datum.ranking == 1" },
            {
              "calculate": "datum['LOCATION'] + ' has the highest normalised GNI '",
              "as": "text_annotation"
            }
          ],
          "mark": { "type": "text", "align": "right" },
          "encoding": { "text": { "field": "text_annotation" } }
        }
      ]
    },

    {
      "width": 800,
      "height": 60,
      "mark": { "type": "line", "point": true },
      "params": [
        {
          "name": "brush",
          "select": { "type": "interval", "encodings": ["x"] }
        }
      ],
      "encoding": {
        "x": { "timeUnit": "year", "field": "TIME", "title": "Year" },
        "y": { "field": "Value", "type": "quantitative", "title": "GNI" },
        "color": { "field": "LOCATION", "type": "nominal", "title": "Country" }
      }
    }
  ]
}
